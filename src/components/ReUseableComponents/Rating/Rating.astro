---
// Rating Banner Component
---

<section class="rating-banner">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <h3>25+</h3>
                <p>Years of Service</p>
            </div>
            <div class="stat-item">
                <h3>5K+</h3>
                <p>Happy Clients</p>
            </div>
            <div class="stat-item">
                <h3>40+</h3>
                <p>Experts Staffs</p>
            </div>
            <div class="stat-item">
                <h3>40+</h3>
                <p>Experts Staffs</p>
            </div>
        </div>
    </div>
</section>

<style>
    .rating-banner {
        background: #E7DBD0;
        padding: 50px 0;
        margin: 0;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px;
    }

    .stats-grid {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 30px;
        width: 100%;
    }

    .stat-item {
        text-align: center;
        padding: 10px;
    }

    .stat-item h3 {
        font-family: 'Inter', sans-serif;
        font-size: 40px;
        font-weight: 500;
        color: #333;
        margin-bottom: 5px;
    }

    .stat-item p {
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        font-weight: 500;
        color: #666;
    }

    @media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }
        
        .stat-item h3 {
            font-size: 1.8rem;
        }
        
        .rating-banner {
            padding: 20px 0;
        }
    }

    @media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>