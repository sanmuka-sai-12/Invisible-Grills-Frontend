---
// Rating Banner Component
---

<section class="rating-banner">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <h3>25+</h3>
                <p>Years of Service</p>
            </div>
            <div class="stat-item">
                <h3>5K+</h3>
                <p>Happy Clients</p>
            </div>
            <div class="stat-item">
                <h3>40+</h3>
                <p>Experts Staffs</p>
            </div>
            <div class="stat-item">
                <h3>40+</h3>
                <p>Experts Staffs</p>
            </div>
        </div>
    </div>
</section>

<style>
    .rating-banner {
        background: #E7DBD0;
        padding: 30px 0;
        margin: 20px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 10px;
    }

    .stat-item h3 {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 5px;
        font-family: 'Inter', sans-serif;
    }

    .stat-item p {
        font-size: 0.9rem;
        color: #666;
        font-weight: 500;
        font-family: 'Inter', sans-serif;
    }

    @media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }
        
        .stat-item h3 {
            font-size: 1.8rem;
        }
        
        .rating-banner {
            padding: 20px 0;
        }
    }

    @media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>