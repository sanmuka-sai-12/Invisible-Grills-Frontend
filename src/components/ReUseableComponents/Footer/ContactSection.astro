---
import contactBgImg from '../../../assets/Images/HomePageImg/LastFrame/ContactWindows.png?url';
import callIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/call.png';
import whatsappBg from '../../../assets/Icons/ReUseableIcons/FooterIcons/whatsapp.png';
import whatsappCall from '../../../assets/Icons/ReUseableIcons/FooterIcons/whatsappCall.png';
---

<section class="contact-section">
    <div class="contact-background">
        <div class="contact-card">
            <div class="contact-header">
                <div class="phone-icon"><img src={callIcon.src} alt="Call" class="icon-img" /></div>
                <h2>GET IN TOUCH</h2>
            </div>
            
            <div class="contact-content">
                <p class="question">"Not Sure Where To Begin?"</p>
                <p class="subtitle">Speak With Our Professional Manager</p>
                
                <div class="contact-buttons">
                    <button class="schedule-btn">
                        <img src={callIcon.src} alt="Call" class="btn-icon" /> SCHEDULE A CALL
                    </button>
                    <button class="whatsapp-btn">
                        <div class="wa-icon-container">
                            <img src={whatsappBg.src} alt="" class="wa-bg-img" />
                            <img src={whatsappCall.src} alt="" class="wa-call-img" />
                        </div>
                        WHATSAPP NOW
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-section {
        width: 100%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-background {
        width: 1400px;
        height: 380px;
        background-image: url('../../../assets/Images/HomePageImg/LastFrame/ContactWindows.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 12px;
        padding: 24px 24px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin: 10px;
    }

    .contact-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px;
        width: 500px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .contact-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
    }

    .phone-icon {
        width: 25px;
        height: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .icon-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .contact-header h2 {
        font-family: 'Inter', sans-serif;
        font-size: 28px;
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    .question {
        font-family: 'Inter', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #B37A42;
        margin-bottom: 8px;
    }

    .subtitle {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #666;
        margin-bottom: 30px;
    }

    .contact-buttons {
        display: flex;
        gap: 15px;
    }

    .schedule-btn, .whatsapp-btn {
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .schedule-btn {
        background: #f5f5f5;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-icon {
        width: 16px;
        height: 16px;
        object-fit: contain;
    }

    .whatsapp-btn {
        background: #F0F0F0;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .wa-icon-container {
        position: relative;
        width: 16px;
        height: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .wa-bg-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .wa-call-img {
        position: absolute;
        width: 60%;
        height: 60%;
        object-fit: contain;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
    }

    .schedule-btn:hover {
        background: #e0e0e0;
    }

    .whatsapp-btn:hover {
        background: #e0e0e0;
    }
</style>