---
import footerLogoImg from '../../../assets/Icons/ReUseableIcons/FooterIcons/FooterLogo.png';
import callNoIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/callno.png';
import facebookIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/facebook.png';
import instagramIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/Instragram.png';
import whatsappIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/footerwhatsapp.png';
import linkedinIcon from '../../../assets/Icons/ReUseableIcons/FooterIcons/linkedin.png';
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-left">
            <div class="logo-section">
                <img src={footerLogoImg.src} alt="DS Logo" class="footer-logo" />
                <p class="company-description">
                    Invisible safety solutions designed for modern homes, open views,<br>
                    and protected living without compromising on design.
                </p>
            </div>
            
            <div class="social-section">
                <h3>Follow Us On</h3>
                <div class="social-icons">
                    <a href="javascript:void(0)" class="social-icon facebook"><img src={facebookIcon.src} alt="Facebook" class="social-img" /></a>
                    <a href="javascript:void(0)" class="social-icon instagram"><img src={instagramIcon.src} alt="Instagram" class="social-img" /></a>
                    <a href="javascript:void(0)" class="social-icon whatsapp"><img src={whatsappIcon.src} alt="WhatsApp" class="social-img" /></a>
                    <a href="javascript:void(0)" class="social-icon linkedin"><img src={linkedinIcon.src} alt="LinkedIn" class="social-img" /></a>
                </div>
            </div>
        </div>
        
        <div class="footer-center">
            <h3>Company</h3>
            <ul class="footer-links">
                <li><a href="#">Home</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Solutions</a></li>
                <li><a href="#">Gallery</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </div>
        
        <div class="footer-right">
            <h3>Get in touch</h3>
            <div class="contact-info">
                <p class="phone"><img src={callNoIcon.src} alt="Call" class="phone-icon-img" /> 040 67309967</p>
                <p class="phone"><img src={callNoIcon.src} alt="Call" class="phone-icon-img" /> +91 44 4859 699</p>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: #E7DBD0;
        padding: 60px 0 40px;
        width: 100%;
        margin-top: -200px;
        padding-top: 260px;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
        display: grid;
        grid-template-columns: 3fr 1fr 1fr;
        gap: 60px;
    }

    .logo-section {
        margin-bottom: 40px;
    }

    .footer-logo {
        width: 110px;
        height: 110px;
        margin-bottom: 20px;
        object-fit: contain;
    }

    .company-description {
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        line-height: 1.6;
        color: #232323;
        max-width: 100%;
    }

    .social-section h3 {
        font-family: 'Inter', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }

    .social-icons {
        display: flex;
        gap: 15px;
    }

    .social-icon {
        width: 50px;
        height: 50px;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: transform 0.3s ease;
        transform: translateY(-5px);
    }

    .social-icon:hover {
        transform: translateY(-8px);
    }

    .social-icon.linkedin {
        background: white;
        border-radius: 50%;
    }



    .footer-center h3, .footer-right h3 {
        font-family: 'Inter', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
    }

    .footer-links {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: 12px;
    }

    .footer-links a {
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        color: #666;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: #B37A42;
    }

    .contact-info .phone {
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        color: #232323;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .phone-icon-img {
        width: 12px;
        height: 12px;
        object-fit: contain;
    }

    .social-img {
        width: 50px;
        height: 50px;
        object-fit: contain;
    }
</style>


