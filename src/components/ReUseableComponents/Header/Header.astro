---
import logoImg from '../../../assets/Images/HomePageImg/FirstHomeFrame/logo.png?url';
import callIcon from '../../../assets/Icons/ReUseableIcons/HeaderIcons/headerCall.png';
---

<header class="header">
    <div class="header-content">
        <div class="logo-wrapper">
            <img src={logoImg} alt="DS Invisible Grills Logo" />
        </div>
        <nav class="nav">
            <button class="nav-btn" id="home-btn">Home</button>
            <button class="nav-btn" id="about-btn">About Us</button>
            <button class="nav-btn dropdown" id="solutions-btn">
                Solutions 
                <svg width="12" height="8" viewBox="0 0 12 8" fill="none">
                    <path d="M1 1.5L6 6.5L11 1.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <button class="nav-btn" id="gallery-btn">Gallery</button>
            <button class="nav-btn" id="contact-btn">Contact Us</button>
        </nav>
        <button class="enquiry-btn">
            <span>Enquiry Now</span>
            <img src={callIcon.src} alt="Call" class="icon" />
        </button>
    </div>
</header>

<style>
    .header {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 96px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        z-index: 10;
        background: #FFFFFF;
    }

    .header-content {
        position: relative;
        width: 1440px;
        height: 96px;
        display: flex;
        align-items: center;
        padding: 0 120px;
    }

    .logo-wrapper {
        width: 160px;
        height: 100px;
        display: flex;
        align-items: center;
        margin-right: 130px; /* Reduced from 220px to move buttons left */
    }

    .logo-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
    }

    .nav {
        display: flex;
        gap: 40px;
        margin-right: auto;
        white-space: nowrap;
        align-items: center;
    }

    .nav-btn {
        background: transparent;
        border: none;
        outline: none;
        font-family: 'Inter', sans-serif;
        font-size: 20px;
        font-weight: 500;
        color: #000000;
        padding: 0;
        cursor: pointer;
        position: relative;
        display: flex;
        align-items: center;
        gap: 4px;
        height: 40px; /* Consistent height for all nav buttons */
    }

    .nav-btn.dropdown svg {
        margin-left: 4px;
    }

    .nav-btn.active::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #000000;
    }

    .nav-btn:hover,
    .nav-btn:focus,
    .nav-btn:active {
        background: transparent;
        outline: none;
        box-shadow: none;
    }

    .enquiry-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        height: 45px;
        background: #B37A42;
        border: none;
        border-radius: 54px;
        cursor: pointer;
    }

    .enquiry-btn span {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        font-weight: 600;
        line-height: 132%;
        letter-spacing: 0;
        color: #ffffff;
    }

    .enquiry-btn .icon {
        display: block;
        width: 16px;
        height: 16px;
        object-fit: contain;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const homeBtn = document.getElementById('home-btn');
        const aboutBtn = document.getElementById('about-btn');
        const solutionsBtn = document.getElementById('solutions-btn');
        const galleryBtn = document.getElementById('gallery-btn');
        const contactBtn = document.getElementById('contact-btn');
        
        // Set active state based on current path
        const path = window.location.pathname;
        if (path === '/' || path === '/index.html') {
            homeBtn?.classList.add('active');
        } else if (path === '/about' || path === '/about/') {
            aboutBtn?.classList.add('active');
        } else if (path === '/Solution' || path === '/Solution/') {
            solutionsBtn?.classList.add('active');
        } else if (path === '/Gallery' || path === '/Gallery/') {
            galleryBtn?.classList.add('active');
        } else if (path === '/ContactUs' || path === '/ContactUs/') {
            contactBtn?.classList.add('active');
        }
        
        if (homeBtn) {
            homeBtn.addEventListener('click', function() {
                window.location.href = '/';
            });
        }
        
        if (aboutBtn) {
            aboutBtn.addEventListener('click', function() {
                window.location.href = '/about';
            });
        }
        
        if (solutionsBtn) {
            solutionsBtn.addEventListener('click', function() {
                window.location.href = '/Solution';
            });
        }

        if (galleryBtn) {
            galleryBtn.addEventListener('click', function() {
                window.location.href = '/Gallery';
            });
        }
        
        if (contactBtn) {
            contactBtn.addEventListener('click', function() {
                window.location.href = '/ContactUs';
            });
        }
    });
</script>
