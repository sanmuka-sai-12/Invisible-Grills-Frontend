---
import logoImg from '../../../assets/Images/HomePageImg/FirstHomeFrame/logo.png?url';
import phoneIcon from '../../../assets/Icons/HomeIcons/homeIcons/phone.png?url';
---

<header class="header">
    <div class="logo-wrapper">
        <img src={logoImg} alt="DS Invisible Grills Logo" />
    </div>
    <nav class="nav">
        <button class="nav-btn" id="home-btn">Home</button>
        <button class="nav-btn" id="about-btn">About Us</button>
        <button class="nav-btn" id="solutions-btn">Solutions</button>
        <button class="nav-btn">Gallery</button>
        <button class="nav-btn" id="contact-btn">Contact Us</button>
    </nav>
    <button class="enquiry-btn">
        <span>Enquiry Now</span>
        <img src={phoneIcon} alt="Phone" class="icon" width="16" height="16" />
    </button>
</header>

<style>
    .header {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 1440px;
        height: 96px;
        display: flex;
        align-items: center;
        padding: 24px 120px;
        z-index: 10;
    }

    .logo-wrapper {
        width: 160px;
        height: 100px;
        display: flex;
        align-items: center;
        margin-right: 220px;
    }

    .logo-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
    }

    .nav {
        display: flex;
        gap: 50px;
        margin-right: 220px;
    }

    .nav-btn {
        background: transparent;
        border: none;
        outline: none;
        font-family: 'Inter', sans-serif;
        font-size: 20px;
        font-weight: 500;
        color: #ffffff;
        padding: 0;
        cursor: pointer;
    }

    .nav-btn:hover,
    .nav-btn:focus,
    .nav-btn:active {
        background: transparent;
        outline: none;
        box-shadow: none;
    }

    .enquiry-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        height: 45px;
        background: #B37A42;
        border: none;
        border-radius: 54px;
        cursor: pointer;
    }

    .enquiry-btn span {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        font-weight: 600;
        line-height: 132%;
        letter-spacing: 0;
        color: #ffffff;
    }

    .enquiry-btn .icon {
        display: block;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const homeBtn = document.getElementById('home-btn');
        const aboutBtn = document.getElementById('about-btn');
        
        if (homeBtn) {
            homeBtn.addEventListener('click', function() {
                window.location.href = '/';
            });
        }
        
        if (aboutBtn) {
            aboutBtn.addEventListener('click', function() {
                window.location.href = '/about';
            });
        }
        
        const solutionsBtn = document.getElementById('solutions-btn');
        if (solutionsBtn) {
            solutionsBtn.addEventListener('click', function() {
                window.location.href = '/Solution';
            });
        }
        
        const contactBtn = document.getElementById('contact-btn');
        if (contactBtn) {
            contactBtn.addEventListener('click', function() {
                window.location.href = '/ContactUs';
            });
        }
    });
</script>


