---
import Header from '../../ReUseableComponents/Header/Header.astro';
import SolutionIcon from '../../../assets/Icons/SolutionIcons/SolutionHeroIcons/solution.png';
---

<div class="solutions-hero">
    <Header />
    <div class="hero-content">
        <div class="solutions-badge">
            <img src={SolutionIcon.src} alt="Solution Icon" class="badge-icon" /> Balcony Safety, Reinvented
        </div>
        <h1>
            Seamless Safety for<br>
            Modern Balconies
        </h1>
        <div class="breadcrumb">
            Home > Invisible Grill for Balconies
        </div>
    </div>
</div>

<style>
    .solutions-hero {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-image: url('../../../assets/Images/SolutionImg/SolutionHeroImg/SolutionHero.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-content {
        text-align: center;
        color: white;
        z-index: 5;
        max-width: 800px;
        padding: 0 20px;
    }

    .solutions-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: transparent;
        border: 1px solid #FFFFFF;
        border-radius: 50px;
        padding: 10px 24px;
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 30px;
    }

    .badge-icon {
        width: 24px;
        height: 24px;
        object-fit: contain;
    }

    .hero-content h1 {
        font-family: 'Montaga', serif;
        font-size: 64px;
        font-weight: 400;
        line-height: 1.2;
        margin-bottom: 30px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .breadcrumb {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        font-weight: 500;
        opacity: 0.9;
    }
</style>