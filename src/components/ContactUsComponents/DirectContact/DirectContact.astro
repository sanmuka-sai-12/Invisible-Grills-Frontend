---
import locationIcon from '../../../assets/Icons/ContactUsIcons/DirectContactIcons/location.png';
import phoneIcon from '../../../assets/Icons/ContactUsIcons/DirectContactIcons/DCphone.png';
import emailIcon from '../../../assets/Icons/ContactUsIcons/DirectContactIcons/message.png';
import timeIcon from '../../../assets/Icons/ContactUsIcons/DirectContactIcons/time.png';
---

<section class="direct-contact">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-info">
                <h2>Always Here to help you</h2>
                <p>Reach out to our team for inquiries, or expert guidance on choosing the right invisible grill solution for your home or project.</p>
                
                <div class="info-items">
                    <div class="info-item">
                        <div class="icon">
                            <img src={locationIcon.src} alt="Location" />
                        </div>
                        <div class="content">
                            <h3>Head Office</h3>
                            <p>Plot No. 52 & 54, 4th Floor, Manjeera Plaza, Road No.2, Banjara Hills, Bangalore - 500034, India</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="icon">
                            <img src={phoneIcon.src} alt="Phone" />
                        </div>
                        <div class="content">
                            <h3>Contact</h3>
                            <p>040 67309967 - Bangalore</p>
                            <p>+91 9900110833 / 9556773325 - Bangalore</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="icon">
                            <img src={emailIcon.src} alt="Email" />
                        </div>
                        <div class="content">
                            <h3>Email</h3>
                            <p>dsinvisiblegrill@gmail.com</p>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="icon">
                            <img src={timeIcon.src} alt="Time" />
                        </div>
                        <div class="content">
                            <h3>Hours of Operation</h3>
                            <p>Monday - Friday : 9:00 AM - 6:00 PM</p>
                            <p>Saturday - Sunday : 9:00 AM - 2:00 PM</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="contact-form">
                <h2>Ready To Get Started ?</h2>
                <p>Your email address will not be published. Required fields are marked</p>
                
                <form>
                    <div class="form-group">
                        <label>Full name</label>
                        <input type="text" placeholder="Enter name" required />
                    </div>
                    
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="tel" placeholder="Enter your number" required />
                    </div>
                    
                    <div class="form-group">
                        <label>Message</label>
                        <textarea placeholder="Enter your message" rows="8" required></textarea>
                    </div>
                    
                    <button type="submit" class="submit-btn">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .direct-contact {
        padding: 80px 0;
        background: #f8f8f8;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: stretch;
    }

    .contact-info h2 {
        font-family: 'Inter', sans-serif;
        font-size: 36px;
        font-weight: 400;
        color: #333;
        margin-bottom: 20px;
    }

    .contact-info > p {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #666;
        line-height: 1.6;
        margin-bottom: 40px;
    }

    .info-items {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .info-item {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    .icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        flex-shrink: 0;
        margin-top: 20px;
    }

    .icon img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .content h3 {
        font-family: 'Inter', sans-serif;
        font-size: 24px;
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .content p {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        font-weight: 400;
        color: #000000;
        line-height: normal;
        margin-bottom: 4px;
    }

    .contact-form {
        background: #F5F0EB;
        padding: 20px 40px 40px 40px;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }

    .contact-form h2 {
        font-family: 'Montaga', serif;
        font-size: 32px;
        font-weight: 400;
        color: #B37A42;
        margin-bottom: 12px;
    }

    .contact-form > p {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #333;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .form-group {
        margin: 0;
    }

    .form-group label {
        display: block;
        font-family: 'Inter', sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 16px;
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        background: transparent;
        color: #333;
        box-sizing: border-box;
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
        color: #999;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: #B37A42;
        background: transparent;
    }

    .submit-btn {
        background: #B37A42;
        color: white;
        border: none;
        padding: 12px 36px;
        border-radius: 25px;
        font-family: 'Inter', sans-serif;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
        align-self: flex-start;
    }

    .submit-btn:hover {
        background: #9a6635;
    }
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .submit-btn:hover {
        background: #9a6635;
    }
</style>